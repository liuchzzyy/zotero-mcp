# ==============================================================================
# Zotero MCP Configuration Template
# ==============================================================================
#
# This is a configuration template for Zotero MCP.
# Copy this file to .env and fill in your actual values.
#
# ==============================================================================

# ==================== MCP Server ====================
SERVER_NAME=zotero-mcp

# ==================== Zotero API Configuration ====================
# Get your API key from: https://www.zotero.org/settings/keys
ZOTERO_LIBRARY_ID=your_library_id_here
ZOTERO_API_KEY=your_api_key_here
ZOTERO_LIBRARY_TYPE=user
ZOTERO_LOCAL=true

# ==================== Metadata API Configuration ====================
# Shared email for polite pool access
POLITE_POOL_EMAIL=your_email@example.com

# ==================== Embedding Models ====================
# Options: default, openai, gemini
ZOTERO_EMBEDDING_MODEL=default
OPENAI_API_KEY=your_openai_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
GEMINI_API_KEY=your_gemini_key_here
GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# ==================== AI/LLM Configuration ====================
# DeepSeek API (for PDF analysis)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# ==================== CLI LLM Configuration ====================
# Claude CLI for multi-modal PDF analysis
ZOTERO_MCP_CLI_LLM_PROVIDER=claude-cli

# ==================== Multi-Modal Analysis ====================
# Enable/disable OCR mode
ZOTERO_MCP_CLI_LLM_OCR_ENABLED=true
ZOTERO_MCP_CLI_LLM_OCR_LANGUAGES=zh,en
ZOTERO_MCP_CLI_LLM_OCR_ENGINE=tesseract

# ==================== Analysis Limits ====================
# Maximum pages per PDF
ZOTERO_MCP_CLI_LLM_MAX_PAGES=50
# Maximum images to extract
ZOTERO_MCP_CLI_LLM_MAX_IMAGES=20
# Text chunk size for processing
ZOTERO_MCP_CLI_LLM_CHUNK_SIZE=2000

# ==================== Workflow Configuration ====================
# Source collection for scanning
SOURCE_COLLECTION_NAME=00_INBOXS
# Target collection after analysis
TARGET_COLLECTION_NAME=01_SHORTTERMS

# ==================== Tag Configuration ====================
# Tag for AI analysis
AI_ANALYSIS_TAG=AI分析

# Tag for metadata updates
AI_METADATA_TAG=AI元数据

# ==================== Deduplication Configuration ====================
# Trash collection for duplicates
TRASH_COLLECTION_NAME=06_TRASHES
